{
  "model": "opus",
  "editor": "vim",
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  },
  "statusline": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  }
}
